

<div class="container">
  <div class="row">
        <div class="col-md-8">
          <% @posts.each do |post|%>
          
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%= post.title %></h3>
            </div>
            <div class="panel-body">
              <%= post.text %>
            </div>
          </div>
          <% end %>

        </div>

          <div class="col-md-4">
          <%= render "new" %>
        </div>
  </div>
</div>
